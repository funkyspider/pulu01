<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <!-- Console target for real-time monitoring -->
    <target xsi:type="Console" name="console"
            layout="${longdate} ${level:uppercase=true:padding=-5} ${logger:shortName=true} ${message} ${exception:format=tostring}" />
    
    <!-- File target for persistent logging -->
    <target xsi:type="File" name="file"
            fileName="logs/pulu01-${shortdate}.log"
            layout="${longdate} ${level:uppercase=true:padding=-5} [${threadid}] ${logger:shortName=true} ${message} ${exception:format=tostring}"
            archiveFileName="logs/archive/pulu01-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="30"
            createDirs="true" />
    
    <!-- API requests/responses file for debugging -->
    <target xsi:type="File" name="apifile"
            fileName="logs/api-${shortdate}.log"
            layout="${longdate} ${level:uppercase=true:padding=-5} ${message}"
            archiveFileName="logs/archive/api-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            createDirs="true" />
  </targets>

  <rules>
    <!-- API-specific logging to separate file -->
    <logger name="*HttpApiClientService" minlevel="Debug" writeTo="apifile" final="true" />
    
    <!-- Everything else to console and main log file -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />
    <logger name="*" minlevel="Info" writeTo="console,file" />
  </rules>

</nlog>